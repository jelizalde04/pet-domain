    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.5",
    "jest": "^30.0.2",
    "sequelize-cli": "^6.6.3"
  }
